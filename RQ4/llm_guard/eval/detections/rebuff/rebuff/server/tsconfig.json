{
  "compilerOptions": {
    "target": "es2015",
    "rootDir": "./",
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "noEmit": true,
    "module": "esnext",
    "moduleResolution": "node",
    "isolatedModules": true,
    "jsx": "preserve",
    "baseUrl": ".",
    "incremental": true,
    "outDir": "dist",
    "composite": true,
    "resolveJsonModule": true,
    "paths": {
      "@/*": ["./*"],
      "@types": ["./types/types"]
    },
    "strict": false,
    "forceConsistentCasingInFileNames": true,
    "esModuleInterop": true
  },
  "include": ["next-env.d.ts", "**/*.ts", "**/*.tsx"],
  "exclude": ["node_modules"]
}
